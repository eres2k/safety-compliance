{
  "version": "1.0.0",
  "description": "Centralized configuration for EU Safety Laws database",

  "rate_limits": {
    "default_delay_ms": 100,
    "ai_delay_ms": 50,
    "max_parallel_scrapes": 4,
    "max_parallel_ai_requests": 10,
    "max_retries": 3,
    "retry_delay_ms": 2000
  },

  "source_types": {
    "html": {
      "description": "HTML webpage source - main laws scraped from government websites",
      "display_name": "Official Law Text",
      "icon": "document"
    },
    "pdf": {
      "description": "PDF document source - supplementary materials like AUVA Merkblätter, DGUV publications",
      "display_name": "PDF Document",
      "icon": "pdf",
      "is_supplementary": true
    },
    "pdf_verification": {
      "description": "PDF source used to verify/supplement an existing HTML law",
      "display_name": "Official PDF",
      "icon": "pdf"
    },
    "custom": {
      "description": "Custom/user-added source",
      "display_name": "Additional Source",
      "icon": "plus"
    }
  },

  "supplementary_source_patterns": [
    "merkblatt",
    "merkbuch",
    "m.plus",
    "guideline",
    "handbook",
    "information",
    "supplement",
    "dguv vorschrift",
    "dguv regel",
    "dguv information",
    "trbs",
    "trgs",
    "asr",
    "pgs"
  ],

